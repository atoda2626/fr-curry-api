  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/express": "^4.17.0",
    "@types/http-errors": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.11.11",
    "dbmate": "^2.26.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  },
  "packageManager": "yarn@4.6.0"
